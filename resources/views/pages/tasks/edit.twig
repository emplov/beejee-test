{% extends "layouts/app.twig" %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <a href="/" class="btn btn-success">
                            Назад
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">

                        {% if errors %}
                            {% for error in errors %}
                                <div class="alert alert-danger" role="alert">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        {% endif %}

                        <form action="/tasks/{{ task.id }}/edit" method="post">
                            <div class="mb-3">
                                <label for="task">Задача</label>
                                <textarea class="form-control" name="task" id="task">{{ task.text }}</textarea>
                            </div>
                            <select name="status" id="status" class="form-control mb-3">
                                <option value="0" {% if task.status == "0" %} selected {% endif %}>В процессе</option>
                                <option value="1" {% if task.status == "1" %} selected {% endif %}>Сделано</option>
                            </select>
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

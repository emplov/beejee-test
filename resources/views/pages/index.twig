{% extends "layouts/app.twig" %}

{% block content %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div style="display: flex;justify-content: space-between;">
                            {% if not authenticated %}
                            <a href="/login" class="btn btn-primary">
                                Авторизация
                            </a>
                            {% else %}
                                <form action="/logout" method="post">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Вы уверены?');">
                                        Выйти
                                    </button>
                                </form>
                            {% endif %}

                            <a href="/tasks/create" class="btn btn-success">
                                Создать
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/" method="get">
                            <div>
                                <label for="id">Флильтр по ID</label>
                                <select name="id" id="id" class="form-control mb-2" onchange="this.form.submit()">
                                    <option value=""></option>
                                    <option value="desc">desc</option>
                                    <option value="asc">asc</option>
                                </select>
                            </div>
                        </form>
                        <form action="/" method="get">
                            <div>
                                <label for="name">Флильтр по имени</label>
                                <select name="name" id="name" class="form-control mb-2" onchange="this.form.submit()">
                                    <option value=""></option>
                                    <option value="desc">desc</option>
                                    <option value="asc">asc</option>
                                </select>
                            </div>
                        </form>
                        <form action="/" method="get">
                            <div>
                                <label for="email">Флильтр по почте</label>
                                <select name="email" id="email" class="form-control mb-2" onchange="this.form.submit()">
                                    <option value=""></option>
                                    <option value="desc">desc</option>
                                    <option value="asc">asc</option>
                                </select>
                            </div>
                        </form>
                        <form action="/" method="get">
                            <div>
                                <label for="status">Флильтр по статусу</label>
                                <select name="status" id="status" class="form-control mb-2" onchange="this.form.submit()">
                                    <option value=""></option>
                                    <option value="desc">desc</option>
                                    <option value="asc">asc</option>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Имя</th>
                                    <th scope="col">Почта</th>
                                    <th scope="col">Задача</th>
                                    <th scope="col">Статус</th>
                                    {% if authenticated %}
                                    <th scope="col">Действия</th>
                                    {% endif %}
                                </tr>
                                </thead>
                                <tbody>
                                {% for task in tasks %}
                                    <tr>
                                        <th scope="row">{{ task.id }}</th>
                                        <td>{{ task.name }}</td>
                                        <td>{{ task.email }}</td>
                                        <td>{{ task.text }}</td>
                                        <td>
                                            {% if task.status == 0 %}
                                                В процессе
                                            {% else %}
                                                Сделано
                                            {% endif %}
                                        </td>
                                        {% if authenticated %}
                                        <td>
                                            <a href="/tasks/{{ task.id }}/edit" class="btn btn-primary">
                                                Ред-ть
                                            </a>
                                        </td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
